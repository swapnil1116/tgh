        link(href='https://fonts.googleapis.com/css2?family=Mr+Dafoe&display=swap', rel='stylesheet')
  body
    div#complete-wrapper-of-page  
    nav#navbar
      #navbar-overlay
      #inside-navbar
        #logo
          h1 Our Â Logistics 
        #nav-contents
          ul
            li.nav-list-items
              a#new-auction-button(href='/customer/createNewAuction')
                span +
                | Open New Auction
            li.nav-list-items
              a#menu
                | Menu
                i.fa.fa-angle-down.arrow-down.arrow-in-shop-login
    #sidebar-main-section-wrapper
